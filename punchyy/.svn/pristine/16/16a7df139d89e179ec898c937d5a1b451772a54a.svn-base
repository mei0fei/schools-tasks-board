package com.etc.punchyy.util;

import java.sql.Connection;
import java.sql.DriverManager;
import java.sql.PreparedStatement;
import java.sql.ResultSet;

public class JDBCUtil {
	//驱动名称
	public static final String DRIVER = "com.mysql.jdbc.Driver";
	//链接数据库地址
	public static final String PATH = "jdbc:mysql://127.18.20.59:3306/yyy";
	//用户名
	public static final String NAME = "root";
	//密码
	public static final String PWD = "123";
	//连接对象
	private Connection con ;
	//预编译语句对象
	private PreparedStatement ps;
	//结果集
	private ResultSet rs;
	
	
	/**获取连接对象
	 * 
	 * @return 链接对象
	 */
	public Connection getcon(){
		try {
			Class.forName(DRIVER);
			con = DriverManager.getConnection(PATH,NAME,PWD);
		} catch (Exception e) {
			System.out.println("数据库链接异常，原因："+e.getMessage());
		}
		return con;
	}
	
	/**
	 * 关闭数据库连接的方法
	 */
	public void closeAll(){
		try {
			if(rs != null){
				rs.close();
			}
			if(ps != null){
				ps.close();
			}
			if(con != null){
				con.close();
			}
		} catch (Exception e) {
			System.out.println("关闭数据库是发生异常，原因："+e.getMessage());
		}
	}
	
	/**
	 * 
	 * @param sql	增删改的sql语句
	 * @param obj	不同语句所需要的动态参数
	 * @return		sql语句执行后受影响行数
	 */
	public int update (String sql,Object...obj){
		int result = 0;
		try {
			con=getcon();
			ps= con.prepareStatement(sql);
			if(obj != null){
				for (int i = 0; i < obj.length; i++) {
					ps.setObject(i+1, obj[i]);
				}
			}
			result = ps.executeUpdate();
		} catch (Exception e) {
			System.out.println("执行sql语句发生异常，原因："+e.getMessage());
		} finally{
			closeAll();
		}
		return result;
	}
	
	/**
	 * 
	 * @param sql 查找的语句
	 * @param obj 不同语句所需要的动态参数
	 * @return 结果集
	 */
	public ResultSet query(String sql,Object...obj){
		try {
			con=getcon();
			ps=con.prepareStatement(sql);
			if(obj != null){
				for (int i = 0; i < obj.length; i++) {
					ps.setObject(i+1, obj[i]);
				}
			}
			rs= ps.executeQuery();
		} catch (Exception e) {
			System.out.println("执行sql语句发生异常，原因："+e.getMessage());
		}
		return rs;
	}
	
	
}
